<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="DefaultTypo"
		   TargetType="TextBlock">
		<Setter Property="TextTrimming"
				Value="CharacterEllipsis" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
	</Style>

	<!--
	******************************************************************
		STYLE GUIDE TEXTBLOCKS STYLES
	******************************************************************
	-->

	<!-- Headline 1 -->
	<Style x:Key="Headline1"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="96" />
		<Setter Property="FontWeight"
				Value="Light" />
	</Style>

	<!-- Headline 2 -->
	<Style x:Key="Headline2"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="60" />
		<Setter Property="FontWeight"
				Value="Light" />
	</Style>

	<!-- Headline 3 -->
	<Style x:Key="Headline3"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="48" />
	</Style>

	<!-- Headline 4 -->
	<Style x:Key="Headline4"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="34" />
		<Setter Property="FontWeight"
				Value="Bold" />
	</Style>

	<!-- Headline 5 -->
	<Style x:Key="Headline5"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="FontWeight"
				Value="Bold" />
	</Style>

	<!-- Headline 6 -->
	<Style x:Key="Headline6"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="FontWeight"
				Value="Medium" />
	</Style>

	<!-- Subtitle 1 -->
	<Style x:Key="Subtitle1"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="16" />
	</Style>

	<!-- Subtitle 2 -->
	<Style x:Key="Subtitle2"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="14" />
		<Setter Property="FontWeight"
				Value="Medium" />
	</Style>

	<!-- Body 1 -->
	<Style x:Key="Body1"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="16" />
	</Style>

	<!-- Body 2 -->
	<Style x:Key="Body2"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="14" />
	</Style>

	<!-- Button -->
	<Style x:Key="Button"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="14" />
		<Setter Property="FontWeight"
				Value="Medium" />
	</Style>

	<!-- Caption -->
	<Style x:Key="Caption"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="12" />
	</Style>

	<!-- Overline -->
	<Style x:Key="Overline"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTypo}">

		<Setter Property="FontSize"
				Value="10" />
		<Setter Property="FontWeight"
				Value="Medium" />
	</Style>
</ResourceDictionary>